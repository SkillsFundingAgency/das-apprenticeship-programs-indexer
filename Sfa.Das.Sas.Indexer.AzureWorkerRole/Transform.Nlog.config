<?xml version="1.0"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="false">
  <targets>
    <target name="elastic" xsi:type="BufferingWrapper" flushTimeout="5000" xdt:Transform="Replace" xdt:Locator="Condition(@name='elastic')">
      <target xsi:type="ElasticSearch" uri="#{ElasticServerUrls}" layout="${message}" includeAllProperties="true" />
    </target>
  </targets>
</nlog>